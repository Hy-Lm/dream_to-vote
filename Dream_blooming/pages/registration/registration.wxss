/* pages/registration/registration.wxss */
.apply {
  width: calc(100vw - 60rpx);
  height: calc(100vh - 60rpx);
  background: #F2F2F2;
  padding: 30rpx;
}

.scroll_view {
  width: calc(100% - 44rpx);
  height:  calc(100% - 70rpx);
  padding: 0 22rpx;
  background: #fff;
  border-radius:20rpx 20rpx 0 0;
  
}

.scroll_viewBox {
  font-size: 36rpx;
  width: 100%;
  text-align: center;
  padding: 36rpx 0 20rpx; 
  border-bottom: 1px solid #f8f8f8;
  margin-bottom: 16rpx;
}

.inputs {
  width: 100%;
  height: 40rpx;
  display: flex;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  border-bottom: 1px solid #f8f8f8;
  padding-bottom: 20rpx;
}
.weui-input{
  width: 500rpx;
}
.btn-area{
  width: 100%;
  position: fixed;
  left:0;
  bottom: 0;
}
.areaBtn{
  width: 100vw !important;
  height: 100rpx;
  line-height: 80rpx;
  margin: 0;
  background: #FF9200;
  color:#fff;
  font-weight: 400;
  font-size: 48rpx;
}
.formImgBox{
  width: 25%;
  height: 200rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
.formImg{
  display: flex;
  flex-wrap:wrap;
}
.formImgBox_jia{
  width: 25%;
  height: 200rpx;
  line-height: 200rpx;
  text-align: center;
  font-size: 50rpx;
  border: 1px dashed #707070;
}
.audioAdd{
  width: calc(100% - 30rpx);
  height: 140rpx;
  line-height: 140rpx;
  text-align: center;
  border: 1px dashed #707070;
  margin-bottom: 30rpx;
  font-size: 50rpx;
}
.VideoAdd{
  width: calc(100% - 30rpx);
  height: 330rpx;
  line-height: 330rpx;
  text-align: center;
  border: 1px dashed #707070;
  margin-bottom: 30rpx;
  font-size: 50rpx;
}
